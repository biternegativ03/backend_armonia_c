{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Backend",
            "type": "shell",
            "command": "./gradlew.bat",
            "args": ["build", "-x", "test"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gradle"
        },
        {
            "label": "Run Backend",
            "type": "shell",
            "command": "java",
            "args": [
                "-jar",
                "build/libs/armonia-backend-0.1.0-SNAPSHOT.jar"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new"
            },
            "dependsOn": ["Build Backend"],
            "isBackground": false
        }
    ]
}
